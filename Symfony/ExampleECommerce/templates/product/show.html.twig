        </div>
        <div class="col-md-7 my-auto"  >
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ ( product.price / 100 )|number_format(2,',','.')  }} â‚¬ </span>
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add_to_cart',{'id':product.id}) }}" class="btn btn-lg btn-primary">Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
