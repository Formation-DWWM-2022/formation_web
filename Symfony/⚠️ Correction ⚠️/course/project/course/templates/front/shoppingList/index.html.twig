{% extends 'front/base.html.twig' %}

{% block title %}Hello Comparator!{% endblock %}

{% block body %}
    <form method="post" action="{{ path('app_home_search') }}">
        <input type="text" name="search" placeholder="Search..." autocomplete="off" class="form-control">
        <button type="submit" name="submit" value="Search" class="btn btn-primary">Search</button>
    </form>
    {% if products %}
        <div class="row">
            {% for product in products %}
                <div class="col-3">
                    <div class="card">
                        {{ product.title }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
